<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="blocks/moodle_notifications/db" VERSION="20101223" COMMENT="XMLDB file for Moodle blocks/moodle_notifications"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="block_moodle_notifications_courses" NEXT="block_moodle_notifications_log" COMMENT="Courses table">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="true" ENUM="false" NEXT="course_id"/>
        <FIELD NAME="course_id" TYPE="int" LENGTH="11" NOTNULL="false" UNSIGNED="true" DEFAULT="0" SEQUENCE="false" ENUM="false" COMMENT="The course identificator" PREVIOUS="id" NEXT="last_notification_time"/>
        <FIELD NAME="last_notification_time" TYPE="int" LENGTH="11" NOTNULL="false" UNSIGNED="true" DEFAULT="0" SEQUENCE="false" ENUM="false" COMMENT="The last time the notification has been sent" PREVIOUS="course_id" NEXT="notify_by_email"/>
        <FIELD NAME="notify_by_email" TYPE="int" LENGTH="1" NOTNULL="false" UNSIGNED="true" DEFAULT="1" SEQUENCE="false" ENUM="false" COMMENT="Enables notification by email" PREVIOUS="last_notification_time" NEXT="notify_by_sms"/>
        <FIELD NAME="notify_by_sms" TYPE="int" LENGTH="1" NOTNULL="false" UNSIGNED="true" DEFAULT="1" SEQUENCE="false" ENUM="false" COMMENT="Enables notification by sms" PREVIOUS="notify_by_email" NEXT="notify_by_rss"/>
        <FIELD NAME="notify_by_rss" TYPE="int" LENGTH="1" NOTNULL="false" UNSIGNED="true" DEFAULT="1" SEQUENCE="false" ENUM="false" COMMENT="Enables RSS notification" PREVIOUS="notify_by_sms" NEXT="notification_frequency"/>
        <FIELD NAME="notification_frequency" TYPE="int" LENGTH="11" NOTNULL="false" UNSIGNED="true" DEFAULT="43200" SEQUENCE="false" ENUM="false" PREVIOUS="notify_by_rss" NEXT="email_notification_preset"/>
        <FIELD NAME="email_notification_preset" TYPE="int" LENGTH="1" NOTNULL="false" UNSIGNED="true" DEFAULT="1" SEQUENCE="false" ENUM="false" COMMENT="User preset for the email notification channel" PREVIOUS="notification_frequency" NEXT="sms_notification_preset"/>
        <FIELD NAME="sms_notification_preset" TYPE="int" LENGTH="1" NOTNULL="false" UNSIGNED="true" DEFAULT="1" SEQUENCE="false" ENUM="false" COMMENT="User preset for the email notification channel" PREVIOUS="email_notification_preset" />
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="block_moodle_notifications_log" COMMENT="block_moodle_notifications_log table retrofitted from MySQL" PREVIOUS="block_moodle_notifications_courses" NEXT="block_moodle_notifications_users">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="true" ENUM="false" NEXT="course_id"/>
        <FIELD NAME="course_id" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="false" ENUM="false" PREVIOUS="id" NEXT="module_id"/>
        <FIELD NAME="module_id" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="false" ENUM="false" PREVIOUS="course_id" NEXT="name"/>
        <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" ENUM="false" PREVIOUS="module_id" NEXT="type"/>
        <FIELD NAME="type" TYPE="char" LENGTH="255" NOTNULL="true" DEFAULT="resource" SEQUENCE="false" ENUM="false" PREVIOUS="name" NEXT="action"/>
        <FIELD NAME="action" TYPE="char" LENGTH="7" NOTNULL="true" DEFAULT="added" SEQUENCE="false" ENUM="true" ENUMVALUES="'added', 'updated', 'deleted'" PREVIOUS="type" NEXT="status"/>
        <FIELD NAME="status" TYPE="char" LENGTH="8" NOTNULL="true" DEFAULT="notified" SEQUENCE="false" ENUM="true" ENUMVALUES="'notified', 'pending'" PREVIOUS="action"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="block_moodle_notifications_users" COMMENT="This table contains user preferences" PREVIOUS="block_moodle_notifications_log">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="true" ENUM="false" NEXT="user_id"/>
        <FIELD NAME="user_id" TYPE="int" LENGTH="10" NOTNULL="false" UNSIGNED="true" DEFAULT="0" SEQUENCE="false" ENUM="false" COMMENT="User id" PREVIOUS="id" NEXT="course_id"/>
        <FIELD NAME="course_id" TYPE="int" LENGTH="10" NOTNULL="false" UNSIGNED="true" DEFAULT="0" SEQUENCE="false" ENUM="false" COMMENT="Course id" PREVIOUS="user_id" NEXT="notify_by_email"/>
        <FIELD NAME="notify_by_email" TYPE="int" LENGTH="1" NOTNULL="false" UNSIGNED="true" DEFAULT="1" SEQUENCE="false" ENUM="false" COMMENT="Enables mail notification. 1-enabled 0-disabled" PREVIOUS="course_id" NEXT="notify_by_sms"/>
        <FIELD NAME="notify_by_sms" TYPE="int" LENGTH="1" NOTNULL="false" UNSIGNED="true" DEFAULT="1" SEQUENCE="false" ENUM="false" COMMENT="Enables sms notification. 1-enabled 0-disabled" PREVIOUS="notify_by_email"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB>
